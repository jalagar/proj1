<h3>Trainer<h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<h4>Pokemonz:</h4>
<p><% @trainer.pokemons.each do |pokemon| %>
	<p><%= pokemon.name %> Level:<%= pokemon.level %> Health: <%= pokemon.health %></p>
	<%= button_to "Damage!", damage_path(id: pokemon), :class => "button medium", :method => :patch %>
</p>
<% end %>
<p><%= button_to "Create a New Pokemanz", new_path(), :class => "button medium", :method => :get %></p>
